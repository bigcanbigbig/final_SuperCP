<h3>上船底圖</h3>
<input type="file" id="canvas-bg-image" accept="image/*"/>
<input type="button" name="submit-bg-image" id="submit-bg-image" onclick="changeCanvasBg();"/>

<script>

$("#canvas-bg-image").on("change", function(event) {

  var file = event.target.files[0];
  var reader = new FileReader();
  reader.readAsDataURL(file);
  reader.onload = function(arg) {

    var img = '<style>canvas{background-image:url(' + arg.target.result + ');background-size: 620px auto; background-repeat: no-repeat;}</style>';
    $("head").append(img);
  }
});


</script>

